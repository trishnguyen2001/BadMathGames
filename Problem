import java.util.ArrayList;

public class ProblemGenerator {
    private Problem current;
    private ArrayList<Integer> alreadyPicked;
    private ArrayList<Problem> set;

    public ProblemGenerator(ArrayList<Problem> set) {
        this.set = set;
    }

    public Problem randomize() {
        int max = set.size();
        int min = -1;
        int id = (int) (Math.random() * (max - min) + min);
        if (alreadyPicked.contains(id)) {
            while (alreadyPicked.contains(id)) {
                id = (int) (Math.random() * (max - min) + min);
            }
        }
        alreadyPicked.add(id);
        return set.get(id);
    }
}
